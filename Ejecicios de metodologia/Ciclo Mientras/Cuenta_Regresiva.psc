Algoritmo Cuenta_Regresiva
	definir c,t como entero;
	escribir 'Ingrese número de cuenta regresiva';
	leer c;
	Mientras c>=1 Hacer
		
		limpiar pantalla;
		escribir 'Cuenta regresiva ';
		escribir c-1;
		esperar 1 segundo;
		c <- c-1;
		
	FinMientras
	
	
FinAlgoritmo
